<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:layout_alignParentTop="true"
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/gWhite"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/addStudentLay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_person"
                    android:id="@+id/studentImg"
                    android:tint="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    tools:ignore="UseAppTint" />
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:layout_centerInParent="true"
                    android:textSize="22sp"
                    android:layout_toEndOf="@+id/studentImg"
                    android:textStyle="bold"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/gWhite"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/addTeacherLay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_manage"
                    android:id="@+id/teacherImg"
                    android:tint="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    tools:ignore="UseAppTint" />
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher"
                    android:layout_centerInParent="true"
                    android:textSize="22sp"
                    android:layout_toEndOf="@+id/teacherImg"
                    android:textStyle="bold"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/gWhite"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/addManagementLay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_management"
                    android:id="@+id/managementImg"
                    android:tint="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    tools:ignore="UseAppTint" />
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Management"
                    android:layout_centerInParent="true"
                    android:textSize="22sp"
                    android:layout_toEndOf="@+id/managementImg"
                    android:textStyle="bold"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/gWhite"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/addBusDriverLay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_bus_1"
                    android:id="@+id/busDriverImg"
                    android:tint="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    tools:ignore="UseAppTint" />
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bus Driver"
                    android:layout_centerInParent="true"
                    android:textSize="22sp"
                    android:layout_toEndOf="@+id/busDriverImg"
                    android:textStyle="bold"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>